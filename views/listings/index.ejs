    <h3>All listings</h3>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1" >
    <% for (let listing of allListings) { %>
      <a href="/listings/<%=listing._id%>"class="listing_link">
        <div class="card-col">
          <img 
        src="<%=listing.image.url%>"class="card-img-top" alt="listing_image" style="height:18rem"/>
        <div class="card-img-overlay">OYO</div>
    <div class="card-body">
        <p class="card-text">
            <b><%=listing.title%></b><br>
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Not Available" %>/night
      </p>
       </div>
      </div>
</a>
      <%}%>
    </div>
 
</body>